<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_store_url(@store) %>
    <% end if can?(:admin, Spree::Store) %>
    <%= content_tag :li, class: ('active' if current == :translations) do %>
      <%= link_to_with_icon 'translate', Spree.t(:'i18n.translations'), spree.admin_translations_url('stores', @store), title: Spree.t(:'i18n.translations') %>
    <% end if can?(:admin, Spree::Store) %>
  </ul>
<% end %>
